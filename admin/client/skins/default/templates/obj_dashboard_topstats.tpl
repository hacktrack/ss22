<div iw-flex-grid="query 4" class="stat-group">
<div iw-flex-cell class="stat-item override">
	<div iw-flex-grid="fit center">
	<div iw-flex-cell="none">
		<span class="icon icon-storage"></span>
	</div>
	<div iw-flex-cell="half-padding">
		<span class="stat-name">{DASHBOARD::STORAGE}</span>
	</div>
	<div iw-flex-cell="none half-padding">
		<span class="stat-value" id="{anchor topstats_storage}">-</span>
	</div>
	</div>
</div>
<div iw-flex-cell class="stat-item override">
	<div iw-flex-grid="fit center">
	<div iw-flex-cell="none">
		<span class="icon icon-collaboration"></span>
	</div>
	<div iw-flex-cell="half-padding">
		<span class="stat-name">{DASHBOARD::ACTIVE_USERS}</span>
	</div>
	<div iw-flex-cell="none half-padding">
		<span class="stat-value" id="{anchor topstats_active_users}">-</span>
	</div>
	</div>
</div>
<div iw-flex-cell class="stat-item override">
	<div iw-flex-grid="fit center">
	<div iw-flex-cell="none">
		<span class="icon icon-sent"></span>
	</div>
	<div iw-flex-cell="half-padding">
		<span class="stat-name">{DASHBOARD::MAIL_SENT}</span>
	</div>
	<div iw-flex-cell="none half-padding">
		<span class="stat-value"><span id="{anchor topstats_mail_sent}">-</span> / <span id="{anchor topstats_mail_sent_period}">-</span></span>
	</div>
	</div>
</div>
<div iw-flex-cell class="stat-item override">
	<div iw-flex-grid="fit center">
	<div iw-flex-cell="none">
		<span class="icon icon-email"></span>
	</div>
	<div iw-flex-cell="half-padding">
		<span class="stat-name">{DASHBOARD::MAIL_RECEIVED}</span>
	</div>
	<div iw-flex-cell="none half-padding">
		<span class="stat-value"><span id="{anchor topstats_mail_received}">-</span> / <span id="{anchor topstats_mail_received_period}">-</span></span>
	</div>
	</div>
</div>
</div>

<div class="message{optional me} me{/optional}">
	<div class="avatar unselectable"><span style="background-image: url('{avatar::img}')"{noptional me} rel="{avatar::link}" class="private_msg" title="{htmlspecialchars CHAT::PRIVATE_MESSAGE}"{/noptional}></span></div>
	<h3 class="name"><strong>{htmlspecialchars name}</strong><span class="time unselectable" title="{fulltime}">{time}</span><span class="edit unselectable">({CHAT::EDITED})</span><span class="show_gpins unselectable">{CHAT::PIN_SHOW}</span></h3>

	<div class="border" id="{anchor border}">
		<div class="addon" id="{anchor addon}"></div>
	</div>

	<div class="toolbar" id="{anchor toolbar}">
		<div id="{anchor reactions}" class="reactions"></div>
		<div id="{anchor controls}" class="controls"></div>
	</div>
</div>
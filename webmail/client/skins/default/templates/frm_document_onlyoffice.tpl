<div id="{anchor editor}" class="editor_container"></div>
<div class="chat_container_mask">
	<div class="chat_icon" id="{anchor chat_icon}" title="{CHAT::ADD_COMMENT}"><img class="icon" src="{_skin}/images/teamchat.svg"></div>
</div>

<div class="chat_container">
	<div class="chat_icon"><img class="icon" src="{_skin}/images/teamchat.svg"></div>
	<div class="room" id="{anchor chat_room}"></div>
	<div class="close" id="{anchor chat_close}"></div>
	<div class="chat_body" id="{anchor comment}"></div>
</div>

<div class="chat_splash" id="{anchor splash}">
	<div class="chat_bubble">
		<h2>{CHAT::DOCUMENT_CHAT_CAPTION}</h2>
		<p>{CHAT::DOCUMENT_CHAT_BODY}</p>
		<obj name="btn_bubble" type="obj_button" css="simple rounded color1"><value>COMMON::TRY_BUTTON</value></obj>
	</div>
</div>
<div class="file">
	<div class="icon unselectable {item::ext}" id="{anchor icon}"></div>
	<div class="name" id="{anchor name}"><div><span class="filename">{htmlspecialchars item::EVNTITLE}</span><span class="size">{item::size}</span>{optional item::draft}<span class="draft">{CHAT::DRAFT}</span>{/optional}</div></div>
	<div class="date" title="{item::fulltime}">{item::date}</div>
	<div class="avatar unselectable" title="{htmlspecialchars item::modified_name}">{item::avatar}</div>
	<div class="control"><div id="{anchor lock}" class="lock" title="{htmlspecialchars FILE::LOCK}"></div><div class="share" title="{htmlspecialchars MAIN_MENU::SHARE}"></div><div class="download" title="{htmlspecialchars ATTACHMENT::DOWNLOAD}"></div></div>
</div>